<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.FragmentDetail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="50dp">

        <TextView
            android:id="@+id/txtAddBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thương hiệu"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <EditText
            android:id="@+id/etxtAddBrand"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtAddBrand"
            app:layout_constraintTop_toBottomOf="@+id/txtAddBrand"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/etxtAddQuantity"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etxtAddBrand"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtAddQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etxtAddQuantity"
            app:layout_constraintTop_toTopOf="@+id/txtAddBrand"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtAddGuarantee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bảo hành"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etxtAddBrand"
            app:layout_constraintTop_toBottomOf="@+id/etxtAddBrand"
            app:layout_constraintVertical_bias="0.08" />

        <EditText
            android:id="@+id/etxtAddGuarantee"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtAddGuarantee"
            app:layout_constraintTop_toBottomOf="@+id/txtAddGuarantee"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtAddColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Màu sắc"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etxtAddQuantity"
            app:layout_constraintTop_toBottomOf="@+id/etxtAddQuantity"
            app:layout_constraintVertical_bias="0.08" />

        <EditText
            android:id="@+id/etxtAddColor"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtAddColor"
            app:layout_constraintTop_toBottomOf="@+id/txtAddColor"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtAddHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều cao"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etxtAddGuarantee"
            app:layout_constraintTop_toBottomOf="@+id/etxtAddGuarantee"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/etxtAddHeight"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtAddHeight"
            app:layout_constraintTop_toBottomOf="@+id/txtAddHeight"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtAddMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chất liệu"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etxtAddColor"
            app:layout_constraintTop_toBottomOf="@+id/etxtAddColor"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/etxtAddMaterial"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtAddMaterial"
            app:layout_constraintTop_toBottomOf="@+id/txtAddMaterial"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtAddDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etxtAddHeight"
            app:layout_constraintTop_toBottomOf="@+id/etxtAddHeight"
            app:layout_constraintVertical_bias="0.050000012" />

        <EditText
            android:id="@+id/etxtAddDes"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtAddDes"
            app:layout_constraintTop_toBottomOf="@+id/txtAddDes"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>