<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SellerHomeActivity">

  <Button
    android:id="@+id/btnProduct"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#CC189EFF"
    android:text="Quản lý sản phẩm"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.29000002" />

  <Button
    android:id="@+id/btnSellerOrder"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:background="#CC189EFF"
    android:text="Quản lý đơn hàng"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnProduct"
    app:layout_constraintVertical_bias="0.0" />

  <Button
    android:id="@+id/btnCoupon"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:background="#CC189EFF"
    android:text="Quản lí mã khuyến mại"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnSellerOrder"
    app:layout_constraintVertical_bias="0.0" />

  <TextView
    android:id="@+id/txtHomeSeller"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Seller"
    android:textSize="30sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.14" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742" />
</androidx.constraintlayout.widget.ConstraintLayout>
