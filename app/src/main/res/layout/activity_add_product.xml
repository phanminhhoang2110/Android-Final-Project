                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/etxtAddQuantity"
                    app:layout_constraintTop_toBottomOf="@+id/etxtAddQuantity"
                    app:layout_constraintVertical_bias="0.08" />

                <EditText
                    android:id="@+id/etxtAddColor"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#756363"
                    android:ems="10"
