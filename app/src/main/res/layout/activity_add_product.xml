                <TextView
                    android:id="@+id/txtAddName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:text="Name : "
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etxtAddName"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#756363"
                    android:ems="10"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/txtAddName"
                    app:layout_constraintTop_toBottomOf="@+id/txtAddName"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/txtAddType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiểu sản phẩm"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/etxtAddName"
                    app:layout_constraintTop_toBottomOf="@+id/etxtAddName"
                    app:layout_constraintVertical_bias="0.0" />


                <RadioGroup
                    android:id="@+id/etxtAddType"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/etxtAddName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/txtAddType"
                    app:layout_constraintTop_toBottomOf="@+id/txtAddType"
                    app:layout_constraintVertical_bias="0.0">

                    <RadioButton
                        android:id="@+id/rdFood"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#9E9696"
                        android:text="Đồ ăn" />

                    <RadioButton
                        android:id="@+id/rdPhone"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#9E9696"
                        android:text="Phone" />

                    <RadioButton
                        android:id="@+id/rdShoes"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#9E9696"
                        android:text="Giày" />
                    <RadioButton
                        android:id="@+id/rdBook"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#9E9696"
                        android:text="Sách" />
                    <RadioButton
                        android:id="@+id/rdFerniture"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#9E9696"
                        android:text="Đồ gia dụng" />
                    <RadioButton
                        android:id="@+id/rdBag"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#9E9696"
                        android:text="Túi" />
                    <RadioButton
                        android:id="@+id/rdBeuty"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#9E9696"
                        android:text="Mỹ phẩm" />
                    <RadioButton
                        android:id="@+id/rdLaptop"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#9E9696"
                        android:text="Laptop" />

                    <RadioButton
                        android:id="@+id/rdClothes"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="#9E9696"
                        android:text="Quần áo" />

