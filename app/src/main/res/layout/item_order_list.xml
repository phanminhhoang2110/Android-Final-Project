<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/imageProductOrderList"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@drawable/folder" />

  <TextView
    android:id="@+id/nameOrder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:fontFamily="@font/lato"
    android:text="Chuột logitech"
    android:textColor="#000000"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/imageProductOrderList"
    app:layout_constraintTop_toTopOf="@+id/imageProductOrderList"
    app:layout_constraintVertical_bias="0.0" />

  <TextView
    android:id="@+id/numberOfOrder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/lato"
    android:text="Số lượng: 1"
    android:textColor="#000000"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/imageProductOrderList"
    app:layout_constraintTop_toBottomOf="@+id/nameOrder"
    app:layout_constraintVertical_bias="0.0" />

  <TextView
    android:id="@+id/priceOfOrder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/lato"
    android:text="Giá: 300.000đ"
    android:textColor="#000000"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/imageProductOrderList"
    app:layout_constraintTop_toBottomOf="@+id/numberOfOrder"
    app:layout_constraintVertical_bias="0.0" />

  <Button
    android:id="@+id/view_detail"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/while_color_button"
    android:fontFamily="@font/lato_bold"
    android:text="@string/view_detail"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/rebuy"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageProductOrderList"
    app:layout_constraintVertical_bias="0.0" />

  <Button
    android:id="@+id/rebuy"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/while_color_button"
    android:fontFamily="@font/lato_bold"
    android:text="@string/re_buy"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/view_detail"
    app:layout_constraintTop_toBottomOf="@+id/imageProductOrderList"
    app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
