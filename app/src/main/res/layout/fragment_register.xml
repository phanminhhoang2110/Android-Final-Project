<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#756363"
    tools:context=".fragment.RegisterFragment">

  <TextView
    android:id="@+id/textWrongInform"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#FA0303"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.022" />

  <EditText
        android:id="@+id/textPasswordRegister"
        android:layout_width="308dp"
        android:layout_height="47dp"
        android:backgroundTint="#756363"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textUsernameRegister"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textUsernameRegister"
        app:layout_constraintTop_toBottomOf="@+id/textUsernameRegister"
        app:layout_constraintVertical_bias="0.037" />

    <EditText
        android:id="@+id/textPhone"
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:backgroundTint="#756363"
        android:ems="10"
        android:hint="Số điện thoại"
        android:inputType="text|phone"
        android:maxLength="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textFullname"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textFullname"
        app:layout_constraintTop_toBottomOf="@+id/textFullname"
        app:layout_constraintVertical_bias="0.018" />

    <EditText
        android:id="@+id/textFullname"
        android:layout_width="303dp"
        android:layout_height="46dp"
        android:backgroundTint="#756363"
        android:ems="10"
        android:hint="Họ tên"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWrongInform"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/textUsernameRegister"
        android:layout_width="307dp"
        android:layout_height="54dp"
        android:backgroundTint="#756363"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/textEmail"
        app:layout_constraintVertical_bias="0.034" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="306dp"
        android:layout_height="46dp"
        android:backgroundTint="#756363"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textPhone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textPhone"
        app:layout_constraintTop_toBottomOf="@+id/textPhone"
        app:layout_constraintVertical_bias="0.031" />

  <Button
    android:id="@+id/btnRegister"
    android:layout_width="0dp"
    android:layout_height="58dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:backgroundTint="#F52929"
    android:text="Đăng ký"
    android:textColor="#FFFFFF"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioGroup"
    app:layout_constraintVertical_bias="0.0" />

  <RadioGroup
    android:id="@+id/radioGroup"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/textPasswordRegister"
    app:layout_constraintHorizontal_bias="0.52"
    app:layout_constraintStart_toStartOf="@+id/textPasswordRegister"
    app:layout_constraintTop_toBottomOf="@+id/textPasswordRegister"
    app:layout_constraintVertical_bias="0.0">

    <RadioButton
      android:id="@+id/rdMale"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:buttonTint="#9E9696"
      android:text="Nam" />

    <RadioButton
      android:id="@+id/rdFemale"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:buttonTint="#9E9696"
      android:text="Nữ" />

  </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
